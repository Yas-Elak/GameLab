<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lizzy.gamelab">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.lizzy.gamelab.Menu"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.lizzy.gamelab.Minesweeper"
            android:label="@string/title_activity_minesweeper"
            android:parentActivityName="com.example.lizzy.gamelab.Menu"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.lizzy.gamelab.Menu" />
        </activity>
        <activity
            android:name="com.example.lizzy.gamelab.Minesweeper_game"
            android:label="@string/title_activity_minesweeper_game"
            android:parentActivityName="com.example.lizzy.gamelab.Minesweeper"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.lizzy.gamelab.Minesweeper" />
        </activity>
    </application>

</manifest>